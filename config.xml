<?xml version='1.0' encoding='utf-8'?>
<widget id="com.AKPCL.SDSv2" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SDS Operations v2.0</name>
    <description>
        SDS application for KPCT...
    </description>
    <author email="epms_support@krishnapatnamport.com" href="http://www.krishnapatnamport.com">
        Adani - Krishnapatnam Port Company Ltd
    </author>
    <content src="login.html" />
	<icon src="www/img/KPCL.png"/>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" source="npm" />
    <plugin name="imeiplugin" source="npm" />
    <config-file target="AndroidManifest.xml" parent="/*" mode="merge">
        <uses-permission android:name="android.permission.CAMERA" />
        <uses-feature android:name="android.hardware.camera" />
        <uses-feature android:name="android.hardware.camera.autofocus" />
    </config-file>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
